---
import { Icon } from "astro-icon";
import SkillItem from "./SkillItem.astro";

const skills = [
  "HTML/CSS",
  "JavaScript",
  "React",
  "Node.js",
  "Express.js",
  "TailwindCSS",
  "Postgres",
  "MongoDB",
  "Git",
];
---

<section id="skills">
  <div class="container mx-auto px-5 py-10">
    <div class="mb-12 text-center">
      <Icon
        pack="heroicons-solid"
        name="chip"
        class="mb-4 inline-block w-10 text-indigo-600 dark:text-indigo-500"
      />
      <h1
        class="mb-4 text-3xl font-medium text-gray-900 dark:text-white sm:text-4xl"
      >
        Compétences &amp; Technologies
      </h1>
      <p
        class="mx-auto leading-relaxed text-gray-600 dark:text-gray-400 lg:w-3/4 xl:w-2/4"
      >
        Une liste des technologies que je maîtrise :
      </p>
    </div>
    <div class="container mx-auto flex flex-wrap sm:mb-2">
      {skills.map((skill) => <SkillItem skill={skill} />)}
    </div>
  </div>
</section>

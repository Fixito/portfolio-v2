---
import { Icon } from 'astro-icon';

interface Props {
  skill: string;
}
const { skill } = Astro.props;
---

<div class="w-full p-2 sm:w-1/2 md:w-1/3">
  <div class="flex h-full items-center rounded-md bg-gray-800 p-4 shadow">
    <Icon
      pack="heroicons-solid"
      name="badge-check"
      class="mr-4 h-6 w-6 shrink-0 text-indigo-600"
    />
    <span class="font-medium text-white">{skill}</span>
  </div>
</div>

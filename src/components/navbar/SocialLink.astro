---
import Icon from "astro-icon";

interface Props {
  url: string;
  icon: { pack: string; name: string };
  title: string;
}

const {
  url,
  icon: { pack, name },
  title,
} = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  aria-label={`Consulter mon profil ${title} (ouvre dans un nouvel onglet)`}
  class="text-muted-foreground hover:text-accent-foreground focus-visible:border-ring focus-visible:ring-ring/50 p-1 transition-colors outline-none focus-visible:ring-[3px]"
>
  <Icon pack={pack} name={name} class="h-6 w-6" aria-hidden="true" />
  <span class="sr-only">Consulter mon profil {title}</span>
</a>

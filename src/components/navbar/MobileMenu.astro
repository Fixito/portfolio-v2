---
import { navlinks } from "./links";
---

<div id="mobile-menu" class="hidden sm:hidden">
  <div class="bg-background absolute w-full space-y-1 px-2 pt-2 pb-3 shadow-sm">
    {
      navlinks.map(({ href, text }) => (
        <a
          href={href}
          aria-label={`Naviguer vers la section ${text.toLowerCase()}`}
          class="text-muted-foreground hover:bg-muted hover:text-accent-foreground focus-visible:border-ring focus-visible:ring-ring/50 block rounded-md px-3 py-2 text-base font-medium outline-none focus-visible:ring-[3px]"
          data-mobile-nav-link
        >
          {text}
        </a>
      ))
    }
    <a
      href="/cv-thomas-robert.pdf"
      aria-label="Télécharger le CV de Thomas ROBERT au format PDF"
      download
      class="text-muted-foreground hover:bg-muted hover:text-accent-foreground focus-visible:border-ring focus-visible:ring-ring/50 block rounded-md px-3 py-2 text-sm font-medium outline-none focus-visible:ring-[3px]"
      >CV
    </a>
  </div>
</div>

---
import { projects } from "./projects";

import SectionHeader from "@components/SectionHeader.astro";
import ProjectCard from "./ProjectCard.astro";
---

<section id="projects" class="bg-secondary py-12">
  <div class="mx-auto max-w-7xl px-6 text-center lg:px-8">
    <SectionHeader
      title="Mes projets"
      description="Voici une sélection de mes projets qui m'ont permis de développer mes compétences :"
      icon={{ pack: "ri", name: "code-s-slash-fill" }}
    />

    <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 md:grid-cols-2">
      {projects.map((project) => <ProjectCard {...project} />)}
    </div>
  </div>
</section>

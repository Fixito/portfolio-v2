---
import { Icon } from "astro-icon";

interface Props {
  skill: string;
}
const { skill } = Astro.props;
---

<div class="w-full p-2 sm:w-1/2 md:w-1/3">
  <div class="bg-secondary flex h-full items-center rounded-md p-4 shadow-sm">
    <Icon
      pack="heroicons-solid"
      name="badge-check"
      class="text-primary mr-4 size-6 shrink-0"
    />
    <span class="text-foreground font-medium">{skill}</span>
  </div>
</div>

---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Thomas ROBERT | Développeur Full-Stack React/Node.js",
  description = "Développeur Full-Stack spécialisé React/Node.js à Valenciennes. Création d'applications web modernes et performantes pour entreprises.",
} = Astro.props;
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

---
import BaseLayout from '@layouts/BaseLayout.astro';

const title = 'Thomas ROBERT | Page Introuvable';
const description =
  "Page non trouvée sur le portfolio de Thomas ROBERT. Retournez à l'accueil pour découvrir mes projets.";
---

<BaseLayout title={title} description={description}>
  <main class="bg-background grid min-h-screen place-items-center">
    <div class="text-center">
      <p class="text-primary text-base font-semibold">404</p>
      <h1
        class="text-foreground mt-4 text-3xl font-bold tracking-tight sm:text-5xl"
      >
        Page introuvable
      </h1>
      <p class="text-muted-foreground mt-6 text-base leading-7">
        Désolé, nous n'avons pas trouvé la page que vous recherchez.
      </p>
      <div class="mt-10">
        <a
          href="/"
          aria-label="Retourner à la page d'accueil du portfolio de Thomas ROBERT"
          class="bg-primary hover:bg-primary/90 focus-visible:border-ring focus-visible:ring-ring/50 rounded-md px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs outline-none focus-visible:ring-[3px]"
          >Retourner à l'accueil</a
        >
      </div>
    </div>
  </main>
</BaseLayout>
